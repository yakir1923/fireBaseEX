<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_background"
    tools:context=".HomePage">

    <Button
        android:id="@+id/Start_Game"
        android:layout_width="158dp"
        android:layout_height="50dp"
        android:layout_marginStart="162dp"
        android:layout_marginTop="325dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="32dp"
        android:background="#5A5959"
        android:text="Start the game"
        android:textColor="#EFE087"
        app:layout_constraintBottom_toTopOf="@+id/shoe_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/shoe_profile"
        android:layout_width="158dp"
        android:layout_height="50dp"
        android:layout_marginStart="157dp"
        android:layout_marginEnd="167dp"
        android:layout_marginBottom="28dp"
        android:background="#5A5959"
        android:text="Show my profile"
        android:textColor="#EFE087"
        app:layout_constraintBottom_toTopOf="@+id/shop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.436"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/shop"
        android:layout_width="158dp"
        android:layout_height="50dp"
        android:layout_marginStart="133dp"
        android:layout_marginEnd="190dp"
        android:layout_marginBottom="197dp"
        android:background="#5A5959"
        android:text="Shop"
        android:textColor="#EFE087"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>