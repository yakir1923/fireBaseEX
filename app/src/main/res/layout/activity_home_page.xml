<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_background"
    tools:context=".HomePage">

    <Button
        android:id="@+id/Start_Game"
        android:layout_width="158dp"
        android:layout_height="50dp"
        android:layout_marginStart="162dp"
        android:layout_marginTop="338dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="346dp"
        android:background="#5A5959"
        android:text="Start the game"
        android:textColor="#EFE087"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.408"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/shoe_profile"
        android:layout_width="158dp"
        android:layout_height="50dp"
        android:layout_marginStart="157dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="167dp"
        android:layout_marginBottom="247dp"
        android:background="#5A5959"
        android:text="Show my profile"
        android:textColor="#EFE087"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Start_Game"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/shop"
        android:layout_width="158dp"
        android:layout_height="50dp"
        android:layout_marginStart="133dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="190dp"
        android:layout_marginBottom="144dp"
        android:background="#5A5959"
        android:text="Shop"
        android:textColor="#EFE087"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shoe_profile"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>